
@{
    ViewBag.Title = "StartVotation";
    var key = @Request.QueryString["key"];
}
<script>
    function selectQuestionforVotation() {
        $.get("/cv/ApiVote/SelectQuestionforVotation", function (data, status) {
            console.log(data);
        });
    }
    function deleteQuestion() {
        $.get("/cv/ApiVote/DeleteQuestion", function (data, status) {
            console.log(data);
        });
    }
    function deleteAllQuestion() {
        $.get("/cv/ApiVote/DeleteAllQuestion", function (data, status) {
            console.log(data);
        });
    }
    var ip = 1;
        function nextquestion(type) {
        var abc = ["0", "a", "b", "c", "d", "e", "f", "g", "h", "i", "j"];
            if (type == 1) {
                ip += 1;
            }
            else if (type == 2) {
                ip -= 1;
            }
            else if (type == 0) {
                ip = 1;
            }
               $("#Respuesta").empty();
            $.get("/cv/ApiVote/nextQuestion?i=1&type=" + type +"&id=" + @key, function (data, status) {
            if (data[0] != null) {
             
                $("#Pregunta").html(ip+". "+data[0]);
                for (var i = 1; i < data.length; i++) {
                    console.log(data[i]);
                    $("#Respuesta").append("<h3 class='op'>" + abc[i] + ". " + data[i] + "<h3>");
                }
            } else {
                $("#Pregunta").html("Gracias por participar");
                $("#control").css("display", "none");
            }


        });
    }



</script>
<div class="card">
    <div class="card-body">
        <h3 class="box-title">Votaciòn @key Iniciada  en : </h3>
        <a href="@Url.Action("VotantsLogin","Votation",new { key= ViewBag.URL})" target="_blank">Click para ir a la votaciòn</a>       
        <h3 class="box-title">Gràfico en : </h3>

            <a href="@Url.Action("Index","ApiGraphic",new { id= ViewBag.UrlGrafico})"target="_blank">Click para ir al gràfico</a>

    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-body">
                <form>
                    <label for="staticEmail" class="col-sm-4 col-form-label">Control</label>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <input type="button" onclick="nextquestion(2);" class="btn btn-secondary" value="Anterior" />
                        </div>
                        <div class="col-sm-2">
                            <input type="button" onclick="nextquestion(0);" class="btn btn-primary" value="Iniciar" />
                        </div>
                        <div class="col-sm-2">
                            <input type="button" onclick="nextquestion(1);" class="btn btn-secondary" value="Siguiente" />
                        </div>
                        <div class="col-sm-2">
                            <input type="button" onclick="selectQuestionforVotation();" class="btn btn-info" value="Comenzar Votaciòn" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <input type="button" onclick="deleteQuestion();" class="btn btn-warning" value="Reiniciar" />
                        </div>
                        <div class="col-sm-2">
                            <input type="button" onclick="deleteAllQuestion();" class="btn btn-danger" value="Reiniciar Votaciòn" />
                        </div>
                    </div>
                    <label for="staticEmail" class="col-sm-4 col-form-label">Gràfico</label>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <button class="btn btn-success">Cantidad</button>
                        </div>
                        <div class="col-sm-2">
                            <button class="btn btn-success">Porcentaje</button>
                        </div>
                        <div class="col-sm-2">
                            <button class="btn btn-success">Detalle</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <h2 id="Pregunta"></h2>

                    </div>
                    <div class="form-group row">
                        <div id="Respuesta">

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
